<div class="center-align">
  		<img src="/assets/images/cartoon-burger.png" class="animated bounce infinite slow">
<h1 class="animated bounceInLeft slow">Welcome to Burger Biz! 
  </h1>
  <h4>Get your burger on!</h4>
</div>

<div class="row">
  <div class="col s4">
    <h5>Grab-N-Go</h5>
    {{#each burger}}
    {{#unless this.devoured}}
    <pre>{{this.id}}.{{this.burger_name}}</pre>
    <div>
    <form class="button-size devour-form" method="PUT">
      <input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
      <button type="submit" class="btn btn-default red darken-3 burger-ready">Devour it!</button>
    </form>
    </div>
    {{/unless}}
    {{/each}}
  </div>
  <div class="col s4">
    <h5>Order a Custom Burger</h5>
    <form class="order-form" action="/" method="POST">
      <textarea id="burgerOrder" type="text" name="burger" placeholder="YOUR DREAM BURGER..."></textarea>
      <button class="btn btn-default orderUp-btn green darken-1" type="submit">Order!</button>
    </form>
  </div>

  <div class="col s4">
    <h5>Memorable Burgers...</h5>
     *eaten burgers go here*
    {{#each burger}}
      {{#if this.devoured}}
      <div class="burger-eaten">
        {{this.burger}}
        </div>
      {{/if}}
      {{/each}}
  </div>
</div>